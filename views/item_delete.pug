extends layout

block content
  h1 #{title}: #{item.title}
  p= item.description

  p Do you really want to delete this item?

  form(method='POST' action='')
    div.form-group
      input#item.form-control(type='hidden', name='id', required='true', value=item._id )

    button.btn.btn-primary(type='submit') Delete

