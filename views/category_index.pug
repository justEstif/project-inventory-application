extends layout

block content
  div(class="flex flex-col gap-5")
    p(class="text-gray-800 text-3xl") Welcome to Inventory Management
    h1(class="text-slate-500 text-5xl")= title

  if error
    p Error getting content.
  else
    ul(class="flex flex-col gap-5 mt-5")
      each category in category_list
        li
          a(href=category.url class="capitalize text-2xl text-slate-600 hover:text-blue-600")= category.name
          p(class="indent-3")= category.description

